<style>
  #navbar.uk-navbar-container {
    background: #222831;
  }
</style>

<nav id="navbar" class="uk-navbar-container navbar" uk-navbar>
  <div class="uk-navbar-left">
    <a id="logoText" class="uk-navbar-item uk-logo uk-text-large text-white" href="/">Admin Dashboard</a>
  </div>
  <div class="uk-navbar-right ">
    <a href="/api/logout" class="uk-margin-right text-white">Logout</a>
  </div>
</nav>
<div class="uk-child-width-expands uk-padding" uk-grid>
 <div class="uk-width-1-1 uk-child-width-1-3 uk-grid-small uk-grid-match uk-text-center" uk-grid>
    <div>
        <div class="uk-card uk-card-default uk-card-body">
            <h3 class="uk-card-title">Database Use</h3>
            <h2>100MB</h2>
        </div>
    </div>
    <div>
        <div class="uk-card uk-card-default uk-card-body">
            <h3 class="uk-card-title">Number Of Users</h3>
            <h2>100</h2>
        </div>
    </div>
    <div>
        <div class="uk-card uk-card-default uk-card-body">
            <h3 class="uk-card-title">Another Stat</h3>
            <h2>123</h2>
        </div>
    </div>
</div>
  <div>
    <table class="uk-table uk-table-divider">
      <tbody>
        <tr>
          <th>UserName</th>
          <th>GitHub Username</th>
          <th>Signed Up</th>
          <th>Remove User</th>
        </tr>
        {{#each users}}
        <tr>
          <td>{{this.username}}</td>
          <td>{{this.ghUsername}}</td>
          <td>{{this.signedUp}}</td>
          <td><button data-user="{{this.username}}" class="uk-button-danger">Delete</button></td>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</div>