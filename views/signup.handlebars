
{{> navbar}}

<div class="uk-container uk-padding-large uk-width-large">
  <div>
    <h2>Sign Up</h2>
    <label>Your public URL will be: 
      <div class="uk-alert-success" uk-alert>
          <p>http://ghport.com/<b><span id="urlLabel" class="uk-text-success"></span></b></p>
      </div>
    </label>

    <form class="signup uk-form-stacked">
      <div class="uk-margin-small">
        <label class="uk-form-label">Username</label>
        <div class="">
          <!-- <span class="uk-form-icon" uk-icon="icon: user"></span> -->
          <input id="username-input" class="uk-input" type="text" />
        </div>
      </div>
      <div class="uk-margin-small">
        <label class="uk-form-label">Password</label>
        <div class="">
          <!-- <span class="uk-form-icon" uk-icon="icon: lock"></span> -->
          <input id="password-input" class="uk-input" type="password" />
        </div>
      </div>
      <div class="uk-margin-small">
        <label class="uk-form-label">Confirm Password</label>
        <div class="">
          <!-- <span class="uk-form-icon" uk-icon="icon: lock"></span> -->
          <input id="confirm-input" class="uk-input" type="password" />
        </div>
      </div>
      <div class="uk-margin-small">
        <label class="uk-form-label">GitHub Username</label>
        <div class="">
          <!-- <span class="uk-form-icon" uk-icon="icon: github"></span> -->
          <input id="github-input" class="uk-input" type="text" />
        </div>
      </div>
      <div
        style="display: none;"
        id="alert"
        class="uk-alert uk-alert-danger u-margin-small"
        role="alert"
      >
        <span uk-icon="icon: warning"></span>
        <span class="sr-only">Error:</span> <span class="msg"></span>
      </div>
      <button class="uk-button uk-button-primary">Submit</button>
    </form>

    <br />
    <p>Already have an account? Login <a href="/login">here</a></p>
  </div>
</div>

<script type="text/javascript" src="/js/signup.js"></script>


